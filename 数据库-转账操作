#2.两个账户转账操作
#ID   voet_count_set
#201			9000
#202			7000
#coding:utf8
import  MySQLdb
import sys

class TransferMoney(object):
    def __init__(self,conn):
        self.conn=conn
    def check_acct_available(self,acctid):
        cur=self.conn.cursor()
        try:
            sql="select * from ds_activity.nbl_video_option where id=%s"%acctid
            cur.execute(sql)
            print "查询账户"+sql
            rs=cur.fetchall()
            if len(rs) !=1:
                raise Exception("账号%s不存在"%acctid)
        finally:
            cur.close()
    def has_enough_money(self,acctid,money):
        cur=self.conn.cursor()
        try:
            sql="select * from ds_activity.nbl_video_option where id=%s and vote_count_set>%s"%(acctid,money)
            cur.execute(sql)
            print "查询账户:"+sql
            rs=cur.fetchall()
            if len(rs) !=1:
                raise Exception("账号%s没有足够的钱"%acctid)
        finally:
            cur.close()
    def reduce_money(self,acctid,money):
        cur=self.conn.cursor()
        try:
            sql="update ds_activity.nbl_video_option set vote_count_set=vote_count_set-%s where id=%s"%(money,acctid)
            cur.execute(sql)
            print "reduce money:"+sql
            if cur.rowcount !=1:
                raise Exception("账号%s减失败"%acctid)
        finally:
            cur.close()
    def add_money(self,acctid,money):
        cur=self.conn.cursor()
        try:
            sql="update ds_activity.nbl_video_option set vote_count_set=vote_count_set+%s where id=%s"%(money,acctid)
            cur.execute(sql)
            print "add money:"+sql
            if cur.rowcount !=1:
                raise Exception("账号%s加失败"%acctid)
        finally:
            cur.close()

    def transfer(self,source_acctid,target_acctid,money):
        try:
            self.check_acct_available(source_acctid)
            self.check_acct_available(target_acctid)
            self.has_enough_money(source_acctid,money)
            self.reduce_money(source_acctid,money)
            self.add_money(target_acctid,money)
            self.conn.commit()
        except Exception as e:
            self.conn.rollback()
            print e

if __name__=='__main__':
    source_acctid=sys.argv[1]
    target_acctid=sys.argv[2]
    money=sys.argv[3]
  conn=MySQLdb.Connect(host='172.168.10.9',port=4306,user='dsuser',passwd='ds!@#',charset='utf8')
    tr_money=TransferMoney(conn)

    try:
        tr_money.transfer(source_acctid,target_acctid,money)
    except Exception as e:
        print "出现问题："+ str(e)
    finally:
        conn.close()
